<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejercicio5.Superficie"
             Title="Superficie">
    <VerticalStackLayout BackgroundColor="MintCream"
                         Spacing="25"
                         Padding="20,20"
                         VerticalOptions="Center">
        <Image
                Source="trian.png" 
                HeightRequest="200"
                HorizontalOptions="Center"/>

        <Label Text="Base del triangulo es:" TextColor="DarkViolet"/>
        <Entry x:Name="B" Placeholder="Base del triangulo" TextColor="Black"/>

        <Label Text="La altura del rectangulo es:" TextColor="DarkViolet"/>
        <Entry x:Name="A" Placeholder="Altura" TextColor="Black"/>

        <Button
                x:Name="CounterBtn"
                Text="Ver resultado"
                Clicked="CounterBtn_Clicked"
                HorizontalOptions="Center"
                TextColor="DarkBlue"
                BackgroundColor="MistyRose"
                BorderWidth="2"
                BorderColor="HotPink"/>


        <Label Text="La superficie del rectangulo es:" TextColor="DarkViolet"/>
        <Entry x:Name="Superfic" Placeholder="Superficie" TextColor="Black" IsEnabled="False"/>
    </VerticalStackLayout>
</ContentPage>